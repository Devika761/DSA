//MISSING AND REPEATED ELEMENT IN 2D ARRAY

/*{

TC : O(n2)
SC : O(n2)--HASHSET
*/


import java.util.HashSet;

public class Main {
    public static void main(String[] args) {
        int [][] arr = {
            {1,3,4},
            {2,5,7},
            {1,8,0}
        };

        HashSet<Integer> s = new HashSet<>();
        int n = 9;
        int eSum = n * (n + 1) / 2;
        int aSum = 0;
        int repeating = -1;

        // First loop: find repeating and sum all elements
        for(int i=0; i<arr.length; i++){
            for(int j=0; j<arr[i].length; j++){
                int val = arr[i][j];
                aSum += val;

                if(!s.add(val)){
                    repeating = val;  // Found repeating
                }
            }
        }

        int missing = eSum - aSum + repeating; // Correct missing number formula
        System.out.println("Missing: " + missing + ", Repeating: " + repeating);
    }
}
